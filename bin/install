#!/usr/bin/env bash
# https://asdf-vm.com/plugins/create.html#bin-install
# # Install a specified version
# install into ASDF_INSTALL_PATH
# shims will be created for anything in install_path/bin
# only place files in install path if success

set -euo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=../lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

if [ "$ASDF_INSTALL_TYPE" != "ASFD_INSTALL_VERSION" ]; then
    fail "asdf-$TOOL_NAME supports release installs only"
fi

(
    mkdir -p "$ASDF_INSTALL_PATH/bin"
    echo "* Copying Binary into: $ASDF_INSTALL_PATH/bin"
    cp -r "${ASDF_DOWNLOAD_PATH}/$TOOL_NAME" "$ASDF_INSTALL_PATH/bin/"

    tool_cmd="$(echo "$TOOL_TEST" | cut -d' ' -f1)"
    test -x "$ASDF_INSTALL_PATH/bin/$tool_cmd" || fail "Expected $install_path/bin/$tool_cmd to be executable."

    echo "* $TOOL_NAME $ASFD_INSTALL_VERSION installation was successful!"
) || (
    rm -rf "$ASDF_INSTALL_PATH"
    fail "An error occurred while installing $TOOL_NAME $ASFD_INSTALL_VERSION."
)
