#!/usr/bin/env bash
# https://asdf-vm.com/plugins/create.html#bin-download
# # Download a specified version
# must download to ASDF_DOWNLOAD_PATH
# on failure, clean download path

set -euo pipefail

sys_target=$(uname)
arch=$(uname -m)
case "$sys_target" in
    Linux) ;;
    *) echo "OS Not Supported: $uname_s" ;;
esac

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=../lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

mkdir -p "$ASDF_DOWNLOAD_PATH"

# Download file to the download directory
echo "* Downloading $TOOL_NAME release $ASDF_INSTALL_VERSION..."
gh release download "$ASDF_INSTALL_VERSION" --clobber --repo "$GH_REPO" --dir "${ASDF_DOWNLOAD_PATH}" || fail "Could not download ceptre"

tar_name="${TOOL_NAME}-${sys_target}"
bin_name="${TOOL_NAME}-bin"
unzip -o "${ASDF_DOWNLOAD_PATH}/${sys_target}"*.zip -d "$ASDF_DOWNLOAD_PATH"
echo "Unpacking Binary"
tar -xzf "$ASDF_DOWNLOAD_PATH/${sys_target}/${tar_name,,}.tgz" -C "$ASDF_DOWNLOAD_PATH" || fail "Could not extract ceptre"
mv "$ASDF_DOWNLOAD_PATH/${bin_name}" "$ASDF_DOWNLOAD_PATH/ceptre"

rm "${ASDF_DOWNLOAD_PATH}"/*.zip
